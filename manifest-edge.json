{
  "manifest_version": 3,
  "name": "Canvas Opdracht Filter",
  "version": "1.0",
  "description": "Voegt filtermogelijkheden toe voor opdrachten en cijfers in Canvas",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.instructure.com/*",
    "*://*.canvaslms.com/*",
    "*://*.canvas.hu.nl/*",
    "*://*.canvas.hu/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.canvaslms.com/*",
        "*://*.canvas.hu.nl/*",
        "*://*.canvas.hu/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage-router-hook.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Opdracht Filter Instellingen"
  }
}
