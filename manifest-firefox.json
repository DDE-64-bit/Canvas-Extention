{
  "manifest_version": 2,
  "name": "Canvas Opdracht Filter",
  "version": "1.0",
  "description": "...",
  "permissions": ["activeTab", "storage"],
  "content_scripts": [
    {
      "matches": [
        "*://*.instructure.com/*",
        "*://*.canvaslms.com/*",
        "*://*.canvas.hu.nl/*",
        "*://*.canvas.hu/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    }
  ],
  "web_accessible_resources": [
    "inpage-router-hook.js"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Canvas Opdracht Filter Instellingen"
  },
  "applications": {
    "gecko": {
      "id": "canvas-opdracht-filter@example.com"
    }
  }
}
